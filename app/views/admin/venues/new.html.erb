<div class="container">
  <h2 class="center">Add a venue</h2>
<div class="opaque-background">
  <div style="padding:20px 100px;">
    <%= form_for [:admin, @venue] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :image %><br><br>
      <%= f.file_field :image %><br><br>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>
      <br>
      <%= f.submit "Create Venue", class: "form-submit" %>
    <% end %>
  </div>
</div>
<br>
</div>