<h1>Edit A venue</h1>

<%= form_for [:admin, @venue] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %><br><br>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :status %>
  <br>
  <%= check_box_tag(:approved) %>
  <%= label_tag(:approved, "Approved/Online") %>
  <br>
  <%= check_box_tag(:declined) %>
  <%= label_tag(:declined, "Declined/Offline") %>
  <br>
  <%= f.submit class: "btn" %>
 <% end %>
