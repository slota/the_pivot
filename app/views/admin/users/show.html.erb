<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-image user-profile">
        <img src=" <%= @user.image%>">
      </div>
      <div class="card-content center venue-card">
        <hr>
        <p class="satisfy-font"> <%= @user.username %></p>
        <hr>
      </div>
    </div>
  </div>
</div>

  <h5 class="center"><%= link_to("Edit Profile", edit_user_path(@user))%></h5>

  <h5 class="center" style="margin:2%">
      <%= link_to("Manage Venues", venues_path)%>
  </h5>

<h3 class="satisfy-font center white-text teal-shadow">Completed Orders</h3>
<% if @orders %>
<div class="container" style="opacity:0.8; background-color: black; color:white;">
  <table class="bordered highlight responsive-table">
    <thead>
      <tr>
        <th data-field="Concert Date">Concert Date</th>
        <th data-field="Band">Band</th>
        <th data-field="Venue">Venue</th>
        <th data-field="Quantity">Quantity</th>
        <th data-field="Price">Price</th>
        <th data-field="Total">Total</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <% order.concert_orders.each do |concert_order| %>
          <tr>
            <td><%= concert_order.concert.date %></td>
            <td><%= concert_order.concert.band %></td>
            <td><%= concert_order.concert.venue.name %></td>
            <td><%= concert_order.quantity %> </td>
            <td><%= concert_order.price %> </td>
            <td><%= concert_order.subtotal %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% end %>

