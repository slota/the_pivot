<h2><%= @chip.name %></h2>
<div class="row">
  <div class="col m3">
    <div class="card">
      <div class="card-image">
        <%= image_tag @chip.image.url, class: "responsive-img" %>
      </div>
    </div>
  </div>
  <div class = "col m9" id="<%= @chip.slug %>">
    <h5><%= @chip.name %></h5>
    <%= @chip.description %><br><br>
    <p><center><%= number_to_currency @chip.price %></center></p>
    <p><center><%= link_to "Edit", edit_admin_chip_path(@chip.id), class: "btn" %><center></p><br>
    <p><center><%= link_to "Delete", admin_chip_path(@chip.id), method: :delete, class: "btn" %><center></p>
  </div>
</div>
