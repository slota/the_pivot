<div class="container">
  <h2>Checkout</h2>

  <p>Please enter your email addresss</p>

  <%= form_for @order do |f| %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.hidden_field :total_price, value: @total %>
    <%= f.submit "Checkout", class: "btn" %>
   <% end %>
</div>
